@model move_store_app.Models.Movies

@{
    ViewData["Title"] = "Create";
}
<style>
    .container {
        background-color: #f9f9f9;
        margin: 50px auto;
        width: 500px;
        height: auto;
        padding: 30px;
        text-align: center;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
    }

    h1 {
        color: #333;
        font-size: 40px;
        margin-bottom: 20px;
    }

    p {
        color: #666;
        font-size: 20px;
        margin-bottom: 30px;
        line-height: 1.5;
    }

    .payment-info {
        margin-top: 50px;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
        text-align: left;
    }

    li {
        font-size: 18px;
        line-height: 1.5;
        margin-bottom: 15px;
    }

    button {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        font-size: 20px;
        padding: 10px 30px;
        margin-top: 50px;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #0062cc;
            transform: translateY(-3px);
        }


</style>
<div class="container">
    <h1>Payment Confirmation</h1>
    @if(ViewBag.Check != true){
            <form method="get" action="Movies">
            <h1>Payment REJECTED! <br>❌ <br>Invalid Data!</h1>
            <button>Try again!</button>
            </form>
      }
      else{
        <p>Your payment has been successfully processed. Thank you for your purchase!</p>
        <p style="font-size: 2.3rem;">✔️</p>
        <div class="payment-info">
            <p>Payment Details:</p>
            <ul>
                <li>Payment Amount: $@ViewBag.Price</li>
                <li>Payment Method: Visa ending in @ViewBag.ED</li>
                <li>Transaction ID: @ViewBag.TransactionID</li>
            </ul>
        </div>
        <form method="get" action="Movies">
            <button>Done</button>
        </form>
      }
    
    
</div>
