@model IEnumerable<move_store_app.Models.Movies>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}


<h1 style="font-size: 32px; margin-bottom: 24px;">List Of Movies</h1>

<p style="margin-bottom: 24px;">
    <a asp-action="Create" class="btn" style="background-color: #007bff; color: #fff; font-weight: bold; padding: 12px 24px; text-decoration: none;">Add New</a>
</p>

<table style="width: 100%; margin-bottom: 24px; border-collapse: collapse;">
    <thead style="background-color: #343a40; color: #fff;">
        <tr>
            <th style="padding: 8px;">@Html.DisplayNameFor(model => model.Title)</th>
            <th style="padding: 8px;">@Html.DisplayNameFor(model => model.RelDate)</th>
            <th style="padding: 8px;">@Html.DisplayNameFor(model => model.Genre)</th>
            <th style="padding: 8px;">@Html.DisplayNameFor(model => model.Description)</th>
            <th style="padding: 8px;">@Html.DisplayNameFor(model => model.Rating)</th>
            <th style="padding: 8px;">@Html.DisplayNameFor(model => model.Image)</th>
            <th style="padding: 8px;">@Html.DisplayNameFor(model => model.Price)</th>
            <th style="padding: 8px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #f8f9fa;">
                <td style="padding: 8px;">@Html.DisplayFor(modelItem => item.Title)</td>
                <td style="padding: 8px;">@Html.DisplayFor(modelItem => item.RelDate)</td>
                <td style="padding: 8px;">@Html.DisplayFor(modelItem => item.Genre)</td>
                <td style="padding: 8px;">@Html.DisplayFor(modelItem => item.Description)</td>
                @if(item.Rating > 5){
                    <td style="padding: 8px;">@Html.DisplayFor(modelItem => item.Rating)<span>⭐</span></td>
                }
                else{
                    <td style="padding: 8px;">@Html.DisplayFor(modelItem => item.Rating)<span style="font-size:1.7rem;">☆</span></td>
                }
                <td style="padding: 8px;"><img src="~/css/images/@item.Image" alt="Movie Poster" class="img-fluid" style="width: 50px; height: auto;"></td>
                <td style="padding: 8px;">@Html.DisplayFor(modelItem => item.Price, "{0:C}")<span style="color:green;">$</span></td>
                <td style="padding: 8px;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn" style="background-color: #ffc107; color: #fff; font-weight: bold; padding: 6px 12px; text-decoration: none;">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn" style="background-color: #17a2b8; color: #fff; font-weight: bold; padding: 6px 12px; text-decoration: none;">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn" style="background-color: #dc3545; color: #fff; font-weight: bold; padding: 6px 12px; text-decoration: none;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


